<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUD_MAUI_APP.CategoriesPage"
             Title="CategoriesPage">
    <VerticalStackLayout>
        <Label Text="Categories" FontSize="30" HorizontalOptions="Center" Margin="10, 10"/>


        <StackLayout Margin="30,10">
            <Label Text="ID"/>
            <Entry x:Name="txtId" />
        </StackLayout>

        <StackLayout Margin="30,10">
            <Label Text="Name"/>
            <Entry x:Name="txtName" />
        </StackLayout>

        <StackLayout Margin="40,10">
            <Button Text="Save"  Margin="0,10" Clicked="Post_Clicked"/>
            <Button Text="Get" Margin="0,10" Clicked="Get_Clicked"/>
            <Button Text="Update" Margin="0,10" Clicked="Put_Clicked"/>
            <Button Text="Delete" Margin="0,10" Clicked="Delete_Clicked"/>
        </StackLayout>

    </VerticalStackLayout>
</ContentPage>